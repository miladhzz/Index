<Window x:Class="Index.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Index"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    <StackPanel>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="500" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <WrapPanel FlowDirection="RightToLeft">
                <TextBlock>با </TextBlock>
                <TextBlock>سلام </TextBlock>
                <TextBlock>به </TextBlock>
                <TextBlock>تمام </TextBlock>
                <TextBlock>مردم </TextBlock>
                <TextBlock>ایران </TextBlock>
            </WrapPanel>
            <Button Click="HelloWorldButton_Click" Grid.Row="1">Hello, World!</Button>
        </Grid>
    </StackPanel>
</Window>
